{
    "mcpServers": {
        "maven": {
            "command": "npx",
            "args": [
                "mcp-maven-deps"
            ]
        },
        "mysql": {
            "command": "uv",
            "args": [
                "--directory",
                "path/to/mysql_mcp_server",
                "run",
                "mysql_mcp_server"
            ],
            "env": {
                "MYSQL_HOST": "localhost",
                "MYSQL_PORT": "3306",
                "MYSQL_USER": "root",
                "MYSQL_PASSWORD": "local2026",
                "MYSQL_DATABASE": "smart-energy-hub"
            }
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": {
                "MEMORY_FILE_PATH": "/path/to/custom/memory.json"
            }
        }
    }
}