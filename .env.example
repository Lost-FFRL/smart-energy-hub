# Smart Energy Hub 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# 服务器配置
SERVER_PORT=8080

# 数据库配置
DB_URL=jdbc:mysql://localhost:3306/smart-energy-hub?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true&autoReconnect=true
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_POOL_SIZE=5

# 缓存配置
THYMELEAF_CACHE=false

# 数据库迁移
FLYWAY_ENABLED=true

# 日志配置
LOG_LEVEL_MAPPER=debug
LOG_PATH=logs
LOG_FILE=seh.log

# API 文档配置
SWAGGER_ENABLED=true
API_DOCS_ENABLED=true

# 开发工具配置
DEVTOOLS_ENABLED=true
LIVERELOAD_ENABLED=true
LIVERELOAD_PORT=35729
RESTART_POLL_INTERVAL=1000
RESTART_QUIET_PERIOD=400

# 生产环境建议配置
# THYMELEAF_CACHE=true
# DEVTOOLS_ENABLED=false
# LIVERELOAD_ENABLED=false
# SWAGGER_ENABLED=false
# LOG_LEVEL_MAPPER=info